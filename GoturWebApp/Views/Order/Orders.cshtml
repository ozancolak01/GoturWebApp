
@{
    ViewData["Title"] = "Orders";
}
@using GoturWebApp.Controllers
@using GoturWebApp.Models.ViewModels
@model IEnumerable<ViewModelOrder>  

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Your Orders</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Basket" asp-action="Basket" class="btn btn-primary">
                <i class="bi bi-bag-check"></i> &nbsp; Place an Order
            </a>
        </div>
    </div>
    <br /><br />


    <table class = "table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td class="text-center" width="50%">
                        @obj.OrderID
                    </td>
                    <td class="text-center" width="30%">
                        @obj.OrderDate
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a id="delete" asp-controller="order" asp-action="orderDetails" asp-route-id="@obj.OrderID" class="btn btn-success mx-2">
                                <i class="bi bi-search"></i> Details</a>
                        </div>
                        <div class="w-75 btn-group" role="group">
                            <a id="delete" href="@Url.Action("Delete",new {Id=@obj.OrderID})" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
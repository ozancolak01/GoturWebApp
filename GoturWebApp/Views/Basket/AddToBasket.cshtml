@model Product
<form method="post" asp-action="AddToBasket">
    <input asp-for="ProductID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="test-primary">Confirm Adding to Basket</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Confirm</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Cancel
            </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}